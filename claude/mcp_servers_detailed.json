{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "description": "GitHub MCP server for repository operations, issues, PRs, and more",
      "capabilities": [
        "Repository management",
        "Issue and PR operations",
        "GitHub API access",
        "Code search",
        "Release management"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@context7/mcp-server"
      ],
      "description": "Context7 MCP server for enhanced context management",
      "capabilities": [
        "Context preservation",
        "Memory management",
        "Session history",
        "Context switching"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@automatalabs/mcp-server-playwright"
      ],
      "description": "Playwright MCP server for web automation and testing",
      "capabilities": [
        "Browser automation",
        "Web scraping",
        "E2E testing",
        "Screenshot capture",
        "Page interaction"
      ]
    },
    "debug-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-debug-thinking"
      ],
      "description": "Debug Thinking MCP server for enhanced debugging and thought process visualization",
      "capabilities": [
        "Thought process debugging",
        "Step-by-step reasoning display",
        "Debug information visualization",
        "Problem-solving trace",
        "Cognitive process monitoring"
      ]
    }
  },
  "settings": {
    "autoStart": true,
    "logLevel": "info",
    "timeout": 30000
  }
}