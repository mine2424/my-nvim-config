{
  "version": "1.0",
  "permissions": {
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf /*)",
      "Bash(rm -Rf /)",
      "Bash(rm -Rf ~)",
      "Bash(rm -Rf ~/*)",
      "Bash(rm -Rf /*)",
      "Bash(rm -r -f /)",
      "Bash(rm -r -f ~)",
      "Bash(rm -r -f ~/*)",
      "Bash(rm -r -f /*)",
      "Bash(rm -fr /)",
      "Bash(rm -fr ~)",
      "Bash(rm -fr ~/*)",
      "Bash(rm -fr /*)",
      "Bash(rm -fR /)",
      "Bash(rm -fR ~)",
      "Bash(rm -fR ~/*)",
      "Bash(rm -fR /*)",
      "Bash(rm -f -r /)",
      "Bash(rm -f -r ~)",
      "Bash(rm -f -r ~/*)",
      "Bash(rm -f -r /*)",
      "Bash(sudo rm -rf /)",
      "Bash(sudo rm -rf ~)",
      "Bash(sudo rm -rf ~/*)",
      "Bash(sudo rm -rf /*)"
    ]
  },
  "settings": {
    "theme": "auto",
    "fontSize": "medium",
    "maxTokens": 100000,
    "temperature": 0.7,
    "topP": 0.9,
    "modelSelection": "claude-opus-4-20250514",
    "streamResponses": true,
    "codeCompletion": {
      "enabled": true,
      "autoSuggest": true,
      "debounceMs": 300
    },
    "safety": {
      "confirmDestructiveActions": true,
      "blockSystemModification": true,
      "requireSudoConfirmation": true
    },
    "workspace": {
      "preserveHistory": true,
      "autosaveInterval": 300,
      "maxHistoryItems": 1000
    }
  },
  "customPrompts": {
    "systemPrompt": "You are Claude, an AI assistant created by Anthropic. You are helpful, harmless, and honest. When working with code, prioritize safety and best practices.",
    "codeReviewPrompt": "Please review this code for potential issues, security vulnerabilities, and suggest improvements.",
    "debugPrompt": "Help me debug this issue. Explain what might be causing the problem and suggest solutions."
  },
  "shortcuts": {
    "newChat": "Cmd+N",
    "clearChat": "Cmd+K",
    "toggleSidebar": "Cmd+B",
    "search": "Cmd+F",
    "settings": "Cmd+,",
    "codeFormat": "Shift+Alt+F",
    "runCode": "Cmd+Enter"
  }
}
